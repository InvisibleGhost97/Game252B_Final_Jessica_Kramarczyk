<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_main_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    tools:context="com.example.jkram.game252b_final_jessica_kramarczyk.MainMenuActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:srcCompat="@drawable/bg"
        android:id="@+id/imageView"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/title"
        android:layout_gravity="center"
        android:layout_marginBottom="150dip"
        android:id="@+id/imageView4"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/startbutton"
        android:layout_gravity="center"
        android:id="@+id/StartButtonImage"
        android:onClick="StartGame"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/helpbutton"
        android:layout_gravity="center"
        android:layout_marginTop="100dip"
        android:id="@+id/helpButtonImage"
        android:onClick="helpScreen"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/quitbutton"
        android:layout_gravity="center"
        android:layout_marginTop="200dip"
        android:id="@+id/QuitButtonImage"
        android:onClick="quitGame"/>


</FrameLayout>
